pipeline{

      agent any
       
        tools {
               jdk 'JAVA_HOME'
               maven 'M2_HOME'
               }

        
stages{
	
	 
        stage('Getting project from Github') {
            steps {
	         script {
                       git branch : 'stock' ,
                       url : 'https://github.com/ahmedaziz-code/app-achat.git';
                  }
			 }
			                     }
	
	stage ('Unit Test') {
            steps{
	          script {
                        sh 'mvn  test'
                 }
		         }
                            }
        stage ('SonarQube analysis') {
            steps{
                sh '''
                mvn sonar:sonar
		sonar.login=admin \ sonar.password=admin.
                '''
            }
        }
                                       
	   stage("Maven Build") {
                steps {
                    script {
                         sh "mvn package -DskipTests=true"
                           }
                      }
                               }
        }
}
