pipeline{

      agent any
       
        tools {
               jdk 'JAVA_HOME'
               maven 'M2_HOME'
               }


        
stages{
	
	 
        stage('Getting project from Github') {
            steps {
	         script {
                       git branch : 'stock' ,
                       url : 'https://github.com/ahmedaziz-code/app-achat.git';
                        }
		  }
		  }
		  
	stage('cleanig the project') {
            steps{
                sh 'mvn clean'
            }
        }
	
        stage("upload jar to nexus") {
                                           steps {
                                         nexusArtifactUploader(
    nexusVersion: 'nexus3',
    protocol: 'http',
    nexusUrl: '192.168.33.10:8081',
    groupId: 'tn.esprit.rh',
    version: 1.0,
    repository: 'simpleass-realise/',
    credentialsId: 'CredentialsId',
    artifacts: [
        [artifactId: achat,
         classifier: '',
         file: 'achat-' + 1.0 + '.jar',
         type: 'jar']
    ]
 )
                                           }
                                           }

}
	 post {
                success {
                     mail to: "laouinikhoubaib@gmail.com",
                            subject: "Build sucess",
                            body: "sucess"
                            echo 'successful'
                        }
                failure {
                     mail to: "laouinikhoubaib@gmail.com",
                            subject: "Build failed",
                            body: "failed"
                    echo 'failed'
                        }
              }	
	      	           
}
