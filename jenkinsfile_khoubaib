pipeline{

      agent any
       
        tools {
               jdk 'JAVA_HOME'
               maven 'M2_HOME'
               }


        
stages{
	
	 
        stage('Getting project from Github') {
            steps {
	         script {
                       git branch : 'stock' ,
                       url : 'https://github.com/ahmedaziz-code/app-achat.git';
                        }
		  }
		  }
		  
	stage('cleanig the project') {
            steps{
                sh 'mvn clean'
            }
        }
	
	
	stage ('Unit Test') {
            steps{
                sh 'mvn  test'
            }
        }

	      
                                                 

}
	 post {
                success {
                     mail to: "laouinikhoubaib@gmail.com",
                            subject: "Build sucess",
                            body: "sucess"
                            echo 'successful'
                        }
                failure {
                     mail to: "laouinikhoubaib@gmail.com",
                            subject: "Build failed",
                            body: "failed"
                    echo 'failed'
                        }
              }	
	      	           
}
