pipeline{

      agent any
       
        tools {
               jdk 'JAVA_HOME'
               maven 'M2_HOME'
               }
    environment {

         registryCredential = 'Galereafond20022*-+/'
        dockerImage = ''
      } 
      
stages{
	
	 
        stage('Getting project from Github') {
            steps {
	         script {
                       git branch : 'stock' ,
                       url : 'https://github.com/ahmedaziz-code/app-achat.git';
                        }
		  }
		  }

        stage('cleanig the project') {
            steps{
                sh 'mvn clean'
            }

        }
       
       stage('Build') {
      		    steps {
        		sh 'mvn -B -DskipTests clean package'
      		          }
            	}
       stage ('Unit Test') {
              steps{
               script {
                 sh 'mvn  test'
           }
            }
        }
	stage ('Build our image'){
            steps{
                sh 'sudo docker build --build-arg IP=192.168.33.10 -t khoubaiblaouini/achat-1.0.jar.'
            }
        }
	
	

             stage("DockerLogin") {
                steps {
                sh 'docker login --username khoubaiblaouini  --password Galereafond20022*-+/'
                }
                }



              
          stage ('Deploy our image'){
            steps{
                sh 'sudo docker login -u khoubaiblaouini -p Galereafond20022*-+/';
                sh 'sudo docker push ahmedazizelj/achat-1.0.jar'
                }
            }
           
          
             

              stage("DockerCompose") {
                 steps {
                 sh 'docker-compose up -d '
                }
                }
		                                      
         
	}
	 post {
                success {
                     mail to: "laouinikhoubaib@gmail.com",
                            subject: "Build sucess",
                            body: "sucess"
                            echo 'successful'
                        }
                failure {
                     mail to: "laouinikhoubaib@gmail.com",
                            subject: "Build failed",
                            body: "failed"
                    echo 'failed'
                        }
              }	
	      	           
}
