pipeline{

      agent any
        tools {
     jdk 'JAVA_HOME'
     maven 'M2_HOME'
               }

        
        stages{
	
	 
        stage('Getting project from Github') {
            steps {
                git branch : 'fournisseur' ,
                    url : 'https://github.com/ahmedaziz-code/app-achat.git';
                  }
                                              }
	
	
	stage ('Unit Test') {
            steps{
                sh 'mvn  test'
                 }
                            }
	
	
	
	 stage ('SonarQube analysis') {
            steps{
                sh '''
                mvn sonar:sonar
                '''
                  }
                                      }


         stage('Testing process') {
             steps {
                  script {
                       sh 'echo "Test is processing ...."'
                       sh 'mvn clean test'
                          }
                    }
                                  }
          stage ('SonarQube analysis') {
              steps{
                  sh '''
                  mvn sonar:sonar
                  '''
                   }
                                        }
              
	   stage("Maven Build") {
                steps {
                    script {
                         sh "mvn package -DskipTests=true"
                           }
                      }
                                }
        }
}
